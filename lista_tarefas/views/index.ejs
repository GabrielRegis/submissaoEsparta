<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="app.css" type="text/css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.10/semantic.min.css" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,400" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Amatic+SC" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.2.1.js" integrity="sha256-DZAnKJ/6XZ9si04Hgrsxu/8s717jcIzLy3oi35EouyE=" crossorigin="anonymous"></script>
	<title>Lista de tarefas</title>
</head>
<body class="mainBody">
    <div class="main">
        <div>
            <h1>Lista de tarefas</h1>
        </div>
        <div class="mainContainer">
            <div>
                <form action="/api" method="POST" enctype="application/x-www-form-urlencoded">
                        <input class="inputNovo" type="text" name="descricao" placeholder="Digite uma nova tarefa">
                </form>
            </div>
            
            <%tarefas.forEach(function(tarefa){%>
                    <div class="tarefa">
                        <div>
                            <h3><%=tarefa.descricao%></h3>
                        </div>
                        <div class="deletar">
                            <form action="/api/<%=tarefa._id%>/?_method=DELETE" method="POST" enctype="application/x-www-form-urlencoded">
    							<button onclick="return confirm('Tem certeza que deseja deletar esta tarefa?');">
    								<i class="icon trash"></i>
    							</button>
    					    </form>
                        </div>
                    </div>
                <%})%>
        </div>
    </div>
    
    
<script type="text/javascript" src="app.js"></script>
</body>
</html>